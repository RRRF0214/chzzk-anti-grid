{
  "manifest_version": 3,
  "name": "Chzzk-Anti-Grid V3",
  "version": "1.1",
  "description": "Chzzk-Anti-Grid (User-Agent Switch)",
  "permissions": [
    "debugger",
    "tabs",
    "webNavigation",
    "alarms"
  ],
  "host_permissions": [
    "https://chzzk.naver.com/*",
    "https://*.chzzk.naver.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Change User-Agent",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
